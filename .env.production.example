# AI Notes Frontend Production Environment Configuration
# Use this as a template for production deployment

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application URL (your production domain)
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# API Base URL (your production backend)
NEXT_PUBLIC_API_BASE_URL=https://your-api.railway.app/api

# Environment
NODE_ENV=production

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Cookie Security (MUST be true in production with HTTPS)
NEXT_PUBLIC_COOKIE_SECURE=true

# CORS Origins (your production domains only)
NEXT_PUBLIC_CORS_ORIGINS=https://your-app.vercel.app,https://your-domain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable features based on your production needs
NEXT_PUBLIC_ENABLE_SYNC=true
NEXT_PUBLIC_ENABLE_VOICE_NOTES=true
NEXT_PUBLIC_ENABLE_TEMPLATES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# =============================================================================
# EXTERNAL SERVICES (Production Keys)
# =============================================================================

# Firebase Configuration (production project)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-production-firebase-project
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-production-firebase.appspot.com

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Disable development features
NEXT_PUBLIC_DEBUG=false

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# Build Configuration
ANALYZE=false
NEXT_PUBLIC_SOURCE_MAPS=false

# =============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# =============================================================================

# Vercel Specific
VERCEL_URL=${VERCEL_URL}
VERCEL_ENV=${VERCEL_ENV}

# Netlify Specific  
NETLIFY_SITE_URL=${URL}
NETLIFY_CONTEXT=${CONTEXT}

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Analytics (if using external analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id