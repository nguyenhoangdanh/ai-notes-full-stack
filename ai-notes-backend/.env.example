# AI Notes Backend Environment Configuration
# Copy this file to .env for development

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Server Port
PORT=3001

# Environment (affects security settings, database connections, etc.)
NODE_ENV=development

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main Database URL (PostgreSQL recommended)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_notes_dev?schema=public"

# Direct Database URL (for migrations and direct connections)
DIRECT_URL="postgresql://username:password@localhost:5432/ai_notes_dev?schema=public"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (use a strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT Token Expiration
JWT_EXPIRES_IN="7d"

# Cookie Security Settings
COOKIE_SECURE="false"
COOKIE_DOMAIN=""

# CORS Origins (comma-separated list)
CORS_ORIGINS="http://localhost:5000,http://localhost:3000,http://127.0.0.1:5000"

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================

# Google OAuth Client ID
GOOGLE_CLIENT_ID="your-google-client-id.googleusercontent.com"

# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase Configuration (for document storage, additional auth)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_SERVICE_ACCOUNT="path/to/service-account.json"
FIREBASE_STORAGE_BUCKET="your-firebase-project.appspot.com"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="ai-notes-storage"
R2_PUBLIC_URL="https://your-bucket.your-account.r2.cloudflarestorage.com"

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS="4000"

# Google AI Configuration (Gemini)
GOOGLE_AI_API_KEY="your-google-ai-api-key"
GOOGLE_AI_MODEL="gemini-1.5-flash"

# =============================================================================
# REDIS CONFIGURATION (for caching and queues)
# =============================================================================

# Redis URL (for session storage, caching, job queues)
REDIS_URL="redis://localhost:6379"

# Redis Password (if authentication is enabled)
REDIS_PASSWORD=""

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email Templates
EMAIL_FROM="AI Notes <noreply@ainotes.app>"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL="debug"

# Sentry DSN (for error tracking in production)
SENTRY_DSN=""

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Upload Directory (for local file storage)
UPLOAD_DIR="./uploads"

# Maximum File Size (in bytes)
MAX_FILE_SIZE="52428800"

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,txt,md,mp3,wav,m4a"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG="true"

# Skip Puppeteer download (if not using PDF generation)
PUPPETEER_SKIP_DOWNLOAD="true"

# Disable telemetry for privacy
NEXT_TELEMETRY_DISABLED="1"