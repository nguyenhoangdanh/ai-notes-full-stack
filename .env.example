# AI Notes Frontend Environment Configuration
# Copy this file to .env.local for development

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================

# Application URL (used for metadata and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:5000

# API Base URL (backend endpoint)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api

# Environment (affects authentication security settings)
NODE_ENV=development

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Cookie Security (set to true in production with HTTPS)
NEXT_PUBLIC_COOKIE_SECURE=false

# CORS Origins (comma-separated list of allowed origins)
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:5000,http://localhost:3000,http://127.0.0.1:5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable offline sync functionality
NEXT_PUBLIC_ENABLE_SYNC=true

# Enable voice notes feature
NEXT_PUBLIC_ENABLE_VOICE_NOTES=true

# Enable templates feature
NEXT_PUBLIC_ENABLE_TEMPLATES=true

# Enable analytics dashboard
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable collaboration features
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Firebase Configuration (for additional storage/auth if needed)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-project.appspot.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Server Port
PORT=5000

# Enable development features
NEXT_PUBLIC_DEBUG=true

# Disable telemetry for privacy
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Bundle analyzer (set to true to analyze bundle size)
ANALYZE=false

# Source maps (disable in production for security)
NEXT_PUBLIC_SOURCE_MAPS=true